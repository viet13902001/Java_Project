<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.ChiTietSanPham">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbarchitietsanpham"
    android:background="#008EFF"
    app:titleTextColor="#FFFFFF"
    app:title="Chi tiết"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imagechitietsanpham"
            android:layout_margin="5dp"
            android:layout_width="400dp"
            android:layout_height="250dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:textColor="#3C68EC"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textviewgiasanpham"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:text="Giá sản phẩm"
                android:textColor="#FB1414"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:background="@drawable/spiner"
                android:foregroundGravity="center"
                android:id="@+id/spiner"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <Button
                android:backgroundTint="#008EFF"
                android:text="Thuê"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:id="@+id/buttondatmua"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#008EFF"
            android:layout_marginTop="7dp"
            android:textSize="25sp"
            android:text="Mô tả chi tiết"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>