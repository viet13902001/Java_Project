<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.Thongtinkhachhang"
    android:background="#C6C5C3">
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/boder"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="80dp"
    android:layout_marginTop="125dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Xác nhận thông tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_margin="9dp"
            android:id="@+id/edittexttenkhachhang"
            android:inputType="text"
            android:hint="Nhập tên khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_margin="9dp"
        android:id="@+id/edittextsodienthoai"
        android:inputType="phone"
        android:hint="Nhập số điện thoại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_margin="9dp"
            android:id="@+id/edittextemail"
            android:inputType="textEmailAddress"
            android:hint="Nhập Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/bottonxacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Xác nhận"
            android:textColor="#000000"
            android:textSize="15sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/bottontrove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:background="#F6F4F4"
            android:padding="10dp"
            android:text="Trở về"
            android:textColor="#000000"
            android:textSize="15sp"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>